generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String   @id @unique
  email      String   @unique
  meetings   Meeting[]
}

model Guest {
  id        String   @id @default(uuid())
  email     String
  meetingId String
  meeting   Meeting  @relation(fields: [meetingId], references: [id])
}

model Meeting {
  id          String     @id @default(uuid())
  room        String
  title       String
  description String?
  startTime   DateTime
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  guests      Guest[]
  summary     String?
}

